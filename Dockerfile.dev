# DigitonePad Development Environment
# Replicates CI/CD environment for local development

FROM swift:5.10-jammy

LABEL maintainer="DigitonePad Development Team"
LABEL description="Development environment for DigitonePad iOS audio application"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    libxml2-dev \
    libssl-dev \
    zlib1g-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    wget \
    curl \
    llvm \
    libncurses5-dev \
    libncursesw5-dev \
    xz-utils \
    tk-dev \
    libffi-dev \
    liblzma-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Configure Swift environment
ENV SWIFT_VERSION=5.10
ENV PATH="/usr/bin:$PATH"

# Copy package files for dependency resolution
COPY Package.swift Package.resolved* ./

# Resolve dependencies (cache layer)
RUN swift package resolve

# Copy source code
COPY Sources ./Sources/
COPY Tests ./Tests/

# Expose common development ports
EXPOSE 8080 8081 3000

# Create development user
RUN useradd -m -s /bin/bash developer
RUN chown -R developer:developer /workspace
USER developer

# Set up development environment
COPY --chown=developer:developer scripts/dev-setup.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-setup.sh

# Default command for development
CMD ["/bin/bash"]

# Health check for container
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD swift --version || exit 1